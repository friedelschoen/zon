let service = {
    "name": "@name",
    "@name": "service-{{name}}",
    "@output": [
        "@multiline",
        "mkdir -p $out/$name",
        "if [ $enable -eq 0 ]; then",
        "  touch $out/$name/down",
        "fi",
        "echo \"$run\" > $out/$name/run",
        "chmod +x $out/$name/run"
    ]
} in output {
    with util.merge,
    "@include": ./util.zon,
    "@name": "services",
    "prefix": ".xservice",
    "paths": [
        output {
            "@define": {
                "name": "9wm"
            },
            "enable": false,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "SVDIR=.. sv check xserver > /dev/null || exit 1",
                "",
                "cd $HOMEs",
                "exec 9wm"
            ],
            with service
        },
        output {
            "@define": {
                "name": "battery-applet"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec cbatticon"
            ],
            with service
        },
        output {
            "@define": {
                "name": "blueman-applet"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec blueman-applet"
            ],
            with service
        },
     output   {
            "@define": {
                "name": "dbus-session"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec dbus-daemon --nofork --session"
            ],
            with service
        },
     output    {
            "@define": {
                "name": "dwm"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "cd $HOME",
                "exec dwm"
            ],
            with service
        },
      output   {
            "@define": {
                "name": "nm-applet"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec nm-applet"
            ],
            with service
        },
      output   {
            "@define": {
                "name": "pa-applet"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec pa-applet"
            ],
            with service
        },
       output  {
            "@define": {
                "name": "slstatus"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "FIFO=/tmp/slstatus.fifo",
                "",
                "[ -p $FIFO ] || rm -f $FIFO",
                "mkfifo $FIFO",
                "",
                "exec slstatus -p $FIFO"
            ],
            with service
        },
      output   {
            "@define": {
                "name": "slstatus-xbps"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/bash",
                "",
                "OUTPUT=/tmp/xbps-updates.txt",
                "",
                "while true; do",
                "    updates=$(xbps-install -Mun | wc -l)",
                "",
                "    if [ $updates -ne 0 ]; then",
                "        echo $updates > $OUTPUT",
                "    else",
                "        echo up-to-date > $OUTPUT",
                "    fi",
                "    sleep 120",
                "done"
            ],
            with service
        },
      output   {
            "@define": {
                "name": "stw-service"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "exec stw -p 1 -B 10 -y 20 psvstat ~/.xservice/*"
            ],
            with service
        },
      output   {
            "@define": {
                "name": "tiramisu"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "SVDIR=.. sv check slstatus > /dev/null || exit 1",
                "",
                "exec tiramisu -o '\\\\x04#source\\\\x05#summary: #body\\\\n' | xargs -i printf '%b' '{}' > /tmp/slstatus.fifo"
            ],
            with service
        },
        output {
            "@define": {
                "name": "udiskie"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec udiskie -ant"
            ],
            with service
        },
       output  {
            "@define": {
                "name": "xfce-polkit"
            },
            "enable": true,
            "run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec /usr/libexec/xfce-polkit"
            ],
            with service
        }
    ]
}
